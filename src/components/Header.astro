---
import { Icon } from "astro-icon/components";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap items-center justify-between">
      <Link href="/" aria-label="Go to home page">
        <div class="font-semibold py-2">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex flex-wrap items-center -mr-2">
        <Link href="/work" box>
          work
        </Link>
        <Link href="/projects" box>
          projects
        </Link>
        <Link href="/blog" box>
          blog
        </Link>
        <button
          id="theme-button"
          aria-label="Toggle theme button"
          class="group size-8 flex items-center justify-center rounded-md hover:bg-black/5 hover:dark:bg-blackblue-light transition-colors duration-300 ease-in-out"
        >
          <div class="group-hover:text-black group-hover:dark:text-white">
            <Icon name="mdi:weather-sunny" class="block dark:hidden" />
            <Icon name="mdi:moon-and-stars" class="hidden dark:block" />
          </div>
        </button>
      </nav>
    </div>
  </Container>
</header>
