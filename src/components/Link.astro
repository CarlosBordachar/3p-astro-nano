---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  box?: boolean;
  small?: boolean;
  withIcon?: boolean;
}

const { href, external, underline = false, box = false, small = false, withIcon = false, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-white transition-colors duration-300 ease-in-out"
    , underline && "underline underline-offset-2"
    , box && "px-2 py-0.5 rounded-md flex items-center hover:bg-black/5 hover:dark:bg-blackblue-light"
    , small && "text-sm"
    , withIcon && "flex items-center gap-1")}
  {...rest}>
  <slot/>
</a>
